<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/white"
        android:padding="15dp"
        android:background="@color/primary"
        android:gravity="center_horizontal"
        android:textSize="24dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <ImageView android:src="@drawable/wwe_logo"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Continue with :"
            android:textStyle="bold"
            android:textSize="16dip"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/fb_bg"

            android:layout_height="wrap_content">

            <TextView android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_centerVertical="true"

                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:text="Facebook"
                android:textSize="22dip"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/fb_icon" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/google_bg"

            android:layout_height="wrap_content">
            <TextView android:id="@+id/google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_centerVertical="true"

                android:textColor="@color/black"
                android:gravity="center_horizontal|center_vertical"
                android:text="Google"
                android:textSize="22dip"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:src="@drawable/google" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/twitter_bg"

            android:layout_height="wrap_content">
            <TextView android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_centerVertical="true"

                android:textColor="@color/white"
                android:gravity="center_horizontal|center_vertical"
                android:text="Twitter"
                android:textSize="22dip"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:src="@drawable/twitter"
                android:id="@+id/imageView" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/email_bg"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_centerVertical="true"

                android:textColor="@color/black"
                android:gravity="center_horizontal|center_vertical"
                android:text="Email"
                android:textSize="22dip"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:src="@drawable/email" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="By proceeding, you agree to our"
                android:textSize="14dip"/>
            <TextView android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal|center_vertical"
                android:text=" privacy policy"
                android:textSize="14dip"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="and"
                android:textSize="14dip"/>
            <TextView android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal|center_vertical"
                android:text=" Terms of use"
                android:textSize="14dip"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>
        <TextView android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/feedback"
            android:gravity="center_horizontal|center_vertical"
            android:text="Feedback"
            android:textSize="14dip"/>
        <TextView android:id="@+id/like"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/likeus"
            android:gravity="center_horizontal|center_vertical"
            android:text="Like us on App store"
            android:textSize="14dip"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>