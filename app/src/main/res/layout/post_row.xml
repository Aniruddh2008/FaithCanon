<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginTop="5dp"
    android:background="#ffffff"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">


        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bo_image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/profile_pic"
            android:text="Basit Ola" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_pic"
            android:text="Today at 12:30"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_pic"
            android:layout_marginLeft="10dp"
            android:text="hey this is all about worls so we should move ahead with one universal truth."
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post"
            android:layout_marginLeft="10dp"
            android:text="35 Likes"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/like"
            android:text="3 comments"
            android:textColor="@color/primary" />

        <View
            android:id="@+id/seprator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/comment"
            android:layout_marginTop="7dp"
            android:background="@color/base" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seprator"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/like_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/like"
                android:layout_marginLeft="12dp"
                android:drawablePadding="5dp"
                android:layout_weight="1.1"
                android:text="Like"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/comment_view"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/like_post"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/comme"
                android:text="Comments"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/report"
                android:text="Share"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/share"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="Report"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/report_tap"
                android:textColor="@color/primary" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

