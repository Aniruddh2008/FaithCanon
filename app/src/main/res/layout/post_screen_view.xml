<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">


        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bo_image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profile_pic"
            android:text="Basit Ola"
            android:textColor="@color/black"

            android:textStyle="bold" />
        <TextView
            android:id="@+id/pic_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:gravity="center_horizontal"
            android:text="Image/Video"
            android:drawableTop="@drawable/ic_menu_gallery"
            android:textColor="@color/black"
/>
        <EditText
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_image"
            android:background="@drawable/round"
            android:gravity="top"
            android:hint="Write something you want to post"
            android:minLines="5"
            android:padding="4dp" />

        <Button
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_below="@+id/post_text"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/primary"
            android:text="POST" />
    </RelativeLayout>
</LinearLayout>
